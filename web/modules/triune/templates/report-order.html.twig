

iv {{ attributes }}>

	<div id="block-projectdashboardtabs" class="contextual-region">
      <ul class="report-tabs">
        <li><a href="/triune/reports/order" class="is-active">Order Report</a></li>
        <li><a href="/triune/reports/difference">Difference Report</a></li>
        <li><a href="/triune/reports/daily">Daily Report</a></li>
        <li><a href="/triune/reports/weekly">Weekly Report</a></li>
        <li><a href="/triune/notice/list/cr">Check Requests</a></li>
        <li><a href="/triune/notice/list/dnr">DNR List</a></li>
        <li><a href="/triune/notice/list/ar">Accident Report</a></li>
      </ul>
  </div>
  
  <header class="app-header">
		<div class="header-title">
			<h2>Daily Office Report for {{ variables.date }}</h2>
		</div>
	</header>
  
  <table id="msortTable0" class="tablesorter" data-sorting="true">
    <thead>
      <tr>
        <th scope="col">Customer</th>
        <th scope="col">Shift</th>
        <th scope="col">Today's Order</th>
        <th scope="col">Today's Filled</th>
        <th scope="col">Yesterday's Order</th>
        <th scope="col">Yesterday's Filled</th>
        <th scope="col">Order/Fill Difference</th>
        <th scope="col">Notes</th>
      </tr>
    </thead>
    <tbody>
    {% for order in orders %}
    <tr>
      <td>{{ order.customer.label.value }}</td>
      <td>{{ order.shift.value }}</td>
      <td>{{ order.quantity.value }}</td>
      <td>{{ order.filled }}</td>
      <td>{{ order.yesterday.quantity }}</td>
      <td>{{ order.yesterday.filled }}</td>
      <td>{{ order.filled - order.quantity.value }}</td>
      <td>{{ order.notes.value }}</td>
    </tr>
    {% endfor %}
    </tbody>
  </table>
</div>